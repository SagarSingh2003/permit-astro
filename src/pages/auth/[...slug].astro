---
import SignIn from "../../components/SignIn";
import SignUp from "../../components/SignUp";

const pages = [
  {
    slug: undefined,
    component : "SignUp"  
  },
  {
    slug: 'signup',
    component: "SignUp"
  }
  ,
  {
    slug: 'signin',
    component : "SignIn"
  }];

  const { slug } = Astro.params;
  const page = pages.find((page) => page.slug === slug);
  if (!page) return Astro.redirect("/404");
  const {component } = page;

---

<html>
<head>
  <title>{component}</title>
</head>
<body>
    {component === "SignUp" ? <SignUp client:only /> : <SignIn client:only />}
</body>
</html>

<style is:global>


.auth-container{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction : column;
  justify-content: center;
  align-items: center;
  gap : 10px;
}

.switch-auth{
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background-color: white;
  height : 50%;
  border: solid 0.1px #e2e2e3;
}

.sign-option{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.sign-box{
  padding-top: 30px;
  width: 100%;
  display: flex;
  gap: 10px;
  flex-direction : column;
  align-items: center;
  justify-content: center;
}

.email-box , .password-box , .submit-btn{
  width: 50%;
  height: 25px;
  border: 0.1px solid #e2e2e3;
  border-radius: 5px;
}

.submit-btn{
  margin-top: 30px;
  margin-bottom : 10px;

}

.email-box , .password-box{
  padding: 15px;
}

.submit-btn{
  background-color: #1a56db;
  color: white;
  height: 40px;
  cursor : pointer;
}

.sign-anchor{
  color : #7d797d;
  text-decoration : underline;
  font-size: 13px;
}

.sign-tab{
  padding-top: 30px;
  padding-bottom :10px;
  border-radius: 3px;
  font-weight: bold;
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition : background-color 500ms ;
}

@media screen and (min-width: 932px) {
   .switch-auth{
      width: 35%;  
   }
}

</style>