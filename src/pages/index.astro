---
import Layout from '../layouts/Layout.astro';
import TodoList from '../components/TodoList';
---

<Layout title="Todo Application">
	<main>
		<TodoList client:only="react" />
	</main>
</Layout>

<style is:global>

.todoList{
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  margin: 20px;
  gap: 20px;
  padding-top: 40px;
  position: relative;
}

.main-container{
  background-color: white;
}


.todos{
  background-color: #ECECEC;
  font-size: 15px;
  min-height: 150px;
  min-width: 250px;
  border-radius: 3px;
  display: flex ;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 20px;
  padding-right: 10px;
}

.todo-date{
  font-size: 10px;
  color: #27272a;
}

.logo , .auth-ops{
    color : black;
}

.todo-ops{
  background-color: #09090B;
  color: white;
  padding: 7px;
  border-radius: 4px;

}

.todo-ops:hover{
  background-color: #27272a;
}

.row{
  display: flex;
  flex-direction: row;
  gap: 20px;
  align-items: center;
}

.row-todo-ops{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
}

.rounded{
  height: 40px;
  width: 40px;
  border-radius: 100%;
  border: 0.1px solid #27272a;
  display: flex;
  align-items: center;
  justify-content: center;
}

.email{
  color: black;
  font-size: 15px;
}


.auth-ops{
  padding: 10px;
  color: black;
  background-color: #ECECEC;
  border-radius: 3px;
}

.auth-ops:hover{  
  background-color: #e2e2e3;
}

.header{
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction : row;
  justify-content: space-around;
  align-items: center;

}



.create-btn , .textbox {
  border-radius : 5px;
  background-color: #FFFDF9;
  color : black;
  border: 0.1px solid gray;
}


.create-btn{
  height: 60px;
  width: 60px;
  font-size: 30px;
  border-radius : 5px;
  cursor : pointer;
}


.create-btn:hover{
  background-color: #ECECEC;
}

.textbox{
    padding: 10px;
    height: 40px;
    width: 40%;
    font-size: 20px;
}

.textbox::placeholder{
  font-size: 14px;
}

.input-container{
  display: flex;
  flex-direction : row;
  gap :  10px;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.main-container{
  display : flex;
  flex-direction : column;
  gap: 10px;
  padding-top: 30px;
  align-items : center;

}

#root{
  background-color: #09090b;
  width: 100%;
  height: 100vh;
}

body{
  margin : 0px;
  padding: 0px;
}

span{
  color : black;
  cursor: pointer;
}



@media screen and (max-width: 1266px){
  
  .todoList{
      grid-template-columns: repeat(3, 1fr);
      margin : 20px;
  }

}

@media screen and (max-width: 987px){
  
  .todoList{
      grid-template-columns: repeat(2, 1fr);
      margin : 20px;
  }

}

@media screen and (max-width: 663px){
  
  .todoList{
      grid-template-columns: repeat(1, 1fr);
      margin : 20px;
  }

}

</style>